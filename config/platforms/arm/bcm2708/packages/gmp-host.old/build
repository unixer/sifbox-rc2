#!/bin/sh

. config/options

get_meta $1

$SCRIPTS/unpack $PKG_PARENT

cd $BUILD/${PKG_PARENT}-${PKG_VERSION}

export CFLAGS="$CFLAGS -fPIC -DPIC"
export CPPFLAGS="$CPPFLAGS -fexceptions"

mkdir -p objdir-host
cd objdir-host

do_configure host \
	     --host=$HOST_NAME \
             --build=$HOST_NAME \
             --enable-shared \
             --disable-static \
             --enable-mpbsd \
             --enable-cxx \

make
#make check
make_install toolchain

mkdir -p $ROOT/$PKG_BUILD_DIR
mv .install $ROOT/$PKG_BUILD_DIR

